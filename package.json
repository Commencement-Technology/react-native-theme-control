{
  "name": "@vonovak/react-native-theme-control",
  "version": "0.1.2",
  "private": false,
  "description": "control the platform theme from react native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-theme-control.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "bob build && npx semantic-release",
    "android": "npx react-native run-android",
    "start": "npx patch-package && cd example && npx react-native start",
    "ios": "react-native run-ios --project-path example/ios",
    "pods": "cd example && pod-install --quiet"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/vonovak-org/react-native-theme-control",
  "author": "vonovak <vonovak@gmail.com> (https://github.com/vonovak)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/vonovak-org/react-native-theme-control/issues"
  },
  "homepage": "https://github.com/vonovak-org/react-native-theme-control#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.4",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-native-menu/menu": "^0.5.2",
    "@react-native-segmented-control/segmented-control": "^2.4.0",
    "@react-navigation/native": "^6.0.10",
    "@react-navigation/native-stack": "^6.6.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^26.0.0",
    "@types/react": "^17.0.45",
    "@types/react-native": "0.67.6",
    "commitlint": "^16.2.4",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^28.0.3",
    "metro-react-native-babel-preset": "^0.70.2",
    "pod-install": "^0.1.36",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "0.68.1",
    "react-native-builder-bob": "^0.18.0",
    "react-native-document-picker": "^8.1.0",
    "react-native-safe-area-context": "^4.3.1",
    "react-native-screens": "^3.13.1",
    "react-native-test-app": "^1.3.9",
    "semantic-release": "^19.0.3",
    "typedoc": "^0.22.17",
    "typedoc-plugin-markdown": "^3.12.1",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "^0.66.1"
  },
  "resolutions": {
    "@types/react": "17.0.44"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {}
}
